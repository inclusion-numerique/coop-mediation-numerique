// Domain model

// Un médiateur numérique
model Mediateur {
  id String @id @default(uuid()) @db.Uuid

  userId String @unique @map("user_id") @db.Uuid
  user   User   @relation(fields: [userId], references: [id])

  // Un médiateur peut être un conseiller numérique
  conseillerNumerique ConseillerNumerique?

  creation     DateTime @default(now())
  modification DateTime @default(now())
  // Cannot soft delete as we need to keep userId and conseillerNumerique.mediateurId unique

  isVisible Boolean @default(false) @map("is_visible")

  // pre computed counts to avoid joins and counts on big tables
  activitesCount       Int @default(0) @map("activites_count")
  accompagnementsCount Int @default(0) @map("accompagnements_count")
  beneficiairesCount   Int @default(0) @map("beneficiaires_count")

  coordinations MediateurCoordonne[]
  enActivite    MediateurEnActivite[]
  beneficiaires Beneficiaire[]
  activites     Activite[]
  invitations   InvitationEquipe[]
  tags          Tag[]

  @@index([activitesCount(sort: Asc)], map: "mediateurs_activites_count_asc_idx")
  @@index([activitesCount(sort: Desc)], map: "mediateurs_activites_count_desc_idx")
  @@index([accompagnementsCount(sort: Asc)], map: "mediateurs_accompagnements_count_asc_idx")
  @@index([accompagnementsCount(sort: Desc)], map: "mediateurs_accompagnements_count_desc_idx")
  @@index([beneficiairesCount(sort: Asc)], map: "mediateurs_beneficiaires_count_asc_idx")
  @@index([beneficiairesCount(sort: Desc)], map: "mediateurs_beneficiaires_count_desc_idx")
  @@index([userId])
  @@map("mediateurs")
}

model InvitationEquipe {
